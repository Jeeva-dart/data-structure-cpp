{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build All",
      "type": "shell",
      "command": "g++",
      "args": [
        "-Wall",
        "-Wextra",
        "-Wpedantic",
        "-Wshadow",
        "-Wformat=2",
        "-Wcast-align",
        "-Wconversion",
        "-Wsign-conversion",
        "-Wnull-dereference",
        "-g3",
        "-O0",
        "-std=c++23",
        "*.cpp",
        "-o",
        "./build/Debug/outDebug"
      ],
      "group": "build",
      "problemMatcher": ["$gcc"],
      "options": {
        "cwd": "${workspaceFolder}/"
      }
    },
    {
      "label": "C++ Multi-file Compile & Run",
      "type": "shell",
      "command": "mkdir -p build/Debug && g++ -Wall -Wextra -std=c++23 *.cpp -o ./build/Debug/multifile && ./build/Debug/multifile",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "new"
      },
      "options": {
        "cwd": "${workspaceFolder}/"
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}